.limiter
  .container-login100
    .wrap-login100
      .login100-pic.js-tilt(data-tilt='')
        img(src='images/img-01.png' alt='IMG')
      form(id="userCreateForm" class="login100-form validate-form" method="POST" action="/signin")
        span.login100-form-title
          | Member Login
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input.input100(id="email" name='email' type='text' placeholder='Email')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Password is required')
          input.input100(id="password" name='password' type='password' placeholder='Password')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-lock(aria-hidden='true')
        .container-login100-form-btn
          button(class="login100-form-btn" type="submit")
            | Login
        .text-center.p-t-12
          span.txt1
            | Forgot
          a.txt2(href='#')
            | Username / Password?
        .text-center.p-t-136
          a.txt2(href='#')
            | Create your Account
            i.fa.fa-long-arrow-right.m-l-5(aria-hidden='true')
